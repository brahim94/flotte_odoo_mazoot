<?xml version="1.0" encoding="UTF-8"?>
<odoo>

 <record id='type_view_form' model='ir.ui.view'>
            <field name="name">type.form</field>
            <field name="model">fleet.list.type</field>
            <field name="arch" type="xml">
                <form string="Type">

                    <groupe col="2">
                        <field name="name"  placeholder="Ex: Voiture personnelle"/>
                    </groupe>

                </form>
            </field>
        </record>



     <record id='type_action' model='ir.actions.act_window'>
        <field name="name">Vehicule Type</field>
        <field name="res_model">fleet.list.type</field>
        <!--field name="view_type">form</field-->
        <field name="view_mode">form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new type
          </p><p>
            You can define several types (e.g. Camion, Car) .
          </p>
        </field>
    </record>


</odoo>