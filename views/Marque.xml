<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id='marque_view_form' model='ir.ui.view'>
            <field name="name">marque.form</field>
            <field name="model">fleet.list.marque</field>
            <field name="arch" type="xml">
                <form string="Brand" >

                    <groupe col="2">
                        <field name="name"  placeholder="Ex: VOLVO"/>
                    </groupe>

                </form>
            </field>
        </record>



     <record id='type_action' model='ir.actions.act_window'>
        <field name="name">Vehicule Marque</field>
        <field name="res_model">fleet.list.marque</field>
        <!--field name="view_type">form</field-->
        <field name="view_mode">form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new brand
          </p><p>
            You can define several types (e.g. VOLCO, JEEP) .
          </p>
        </field>
    </record>


</odoo>